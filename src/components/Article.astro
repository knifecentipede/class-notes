        height: 94vh;

        /* FOR TESTING */
        border: 2px solid green;
    }

    #file-content {
        /* HEADER SLUG STRUGGLE ZONE */
        /* min-height: 100%; */
        /*position: absolute; */
        /* margin-top: 2lh;  */
        /* height: 90%; */
