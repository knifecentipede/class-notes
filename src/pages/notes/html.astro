---
import "../../styles/dir.css";
import GlobalLayout from "../../layouts/GlobalLayout.astro";
import { getCollection } from "astro:content";
const notes = await getCollection(`notesHtml`);
---

<GlobalLayout path=`${Astro.url.pathname}`>
    <ul class="dir">
        {
            notes.map((note) => (
                <li>
                    <a href={`/notes/html/${note.id}`}>/{note.data.title}</a>
                </li>
            ))
        }
    </ul>
</GlobalLayout>
