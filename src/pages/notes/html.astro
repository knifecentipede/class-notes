---
import "../../styles/browse-collection.css";
import GlobalLayout from "../../layouts/GlobalLayout.astro";
import BrowseCollection from "../../components/BrowseCollection.astro";

// getCollection requires knowing N: N.astro

// assuming depth is /group/N/[id].astro
const myurl = Astro.url.pathname;
const directories = myurl.split("/").splice(1, 2);
---

<GlobalLayout path=`${Astro.url.pathname}`>
    <!-- pass this unique url containing N to browse collection constructor -->
    <BrowseCollection directories={directories} />
</GlobalLayout>
